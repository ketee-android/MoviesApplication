<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <fragment
        android:id="@+id/fragmentFantasticFilms"
        android:name="com.ketee_jishs.moviesapplication.fantastic_films.FantasticFilmsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_fantastic_films"/>

    <fragment
        android:id="@+id/fragmentHorrorFilms"
        android:name="com.ketee_jishs.moviesapplication.horror_films.HorrorFilmsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_horror_films"/>
</LinearLayout>